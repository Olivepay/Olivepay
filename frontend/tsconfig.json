{
  "files": [],
  "references": [
    { "path": "./tsconfig.app.json" },
    { "path": "./tsconfig.node.json" }
  ],
  "compilerOptions": {
    "allowJs": true,
    "jsx": "react-jsx",
    "baseUrl": "src",
    "paths": {
      "*": ["*", "*.ts", "*.tsx"]
    },
    "outDir": "./dist",
    "forceConsistentCasingInFileNames": true
  },
  "exclude": [
    "node_modules",
    "dist",
    "build",
    ".env",
    ".env.*",
    "public",
    "assets",
    "static"
  ]
}
